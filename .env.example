# =========================================
# DOU+投放管理系统 - 环境变量配置模板
# 复制此文件为 .env 并填写实际值
# =========================================

# -----------------------------------------
# 数据库配置
# -----------------------------------------
MYSQL_HOST=127.0.0.1
MYSQL_PORT=3306
MYSQL_DATABASE=douplus
MYSQL_USERNAME=your_username
MYSQL_PASSWORD=your_password

# -----------------------------------------
# Redis配置
# -----------------------------------------
REDIS_HOST=127.0.0.1
REDIS_PORT=6379
REDIS_PASSWORD=

# -----------------------------------------
# 抖音开放平台API配置
# -----------------------------------------
DOUYIN_APP_ID=your_app_id
DOUYIN_APP_SECRET=your_app_secret
DOUYIN_OAUTH_CALLBACK=https://your-domain.com/oauth/callback
DOUYIN_OAUTH_URL=https://open.oceanengine.com/audit/oauth.html

# -----------------------------------------
# JWT配置
# -----------------------------------------
JWT_SECRET=your-jwt-secret-key-at-least-32-characters
JWT_EXPIRATION=86400000

# -----------------------------------------
# AES加密密钥（必须32字符）
# -----------------------------------------
AES_SECRET_KEY=your-aes-secret-key-32-chars!!

# -----------------------------------------
# 服务端口配置
# -----------------------------------------
SERVER_PORT=8081
FRONTEND_PORT=3000

# -----------------------------------------
# 日志级别
# -----------------------------------------
LOG_LEVEL=INFO
